<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userProductLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#59E6D5">

            <TextView
                android:id="@+id/userMinusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="#FFFFFF"
                android:text="  - "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userRecyclerProductName" />

            <TextView
                android:id="@+id/userPlusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="#FFFFFF"
                android:text=" + "
                app:layout_constraintEnd_toStartOf="@+id/userMinusBtn"
                app:layout_constraintTop_toBottomOf="@+id/userRecyclerProductName" />

            <TextView
                android:id="@+id/userPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:background="#FFFFFF"
                android:text="0"
                app:layout_constraintEnd_toStartOf="@+id/userProductType2"
                app:layout_constraintTop_toBottomOf="@+id/userRecyclerProductName" />

            <TextView
                android:id="@+id/userRupeeSymbol1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Rs."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userRecyclerProductName" />

            <TextView
                android:id="@+id/userRupeeSymbol2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Rs."
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/userRecyclerProductPrice2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userRecyclerProductUnitType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="UnitType"
                app:layout_constraintStart_toEndOf="@+id/userRecyclerProductUnits"
                app:layout_constraintTop_toBottomOf="@+id/userRecyclerProductName" />

            <TextView
                android:id="@+id/userProductType2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="9dp"
                android:text="Type"
                app:layout_constraintEnd_toStartOf="@+id/userPlusBtn"
                app:layout_constraintTop_toBottomOf="@+id/userRecyclerProductName" />

            <TextView
                android:id="@+id/userRecyclerProductUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Quantity"
                app:layout_constraintStart_toEndOf="@+id/userRecyclerProductPrice"
                app:layout_constraintTop_toBottomOf="@+id/userRecyclerProductName" />

            <TextView
                android:id="@+id/userRecyclerProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Product Price"
                app:layout_constraintStart_toEndOf="@+id/userRupeeSymbol1"
                app:layout_constraintTop_toBottomOf="@+id/userRecyclerProductName" />

            <TextView
                android:id="@+id/userRecyclerProductPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="0"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userRecyclerProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="ProductName"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>